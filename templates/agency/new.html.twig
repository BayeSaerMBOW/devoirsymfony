{% extends 'base.html.twig' %}

{% block title %}Nouvelle Agence{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8">Créer une nouvelle agence</h1>

        <div class="bg-white shadow-md rounded-lg p-6 max-w-2xl">
            {{ form_start(form) }}
                <div class="space-y-6">
                    {% for field in form %}
                        <div>
                            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                            {{ form_errors(field, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                        </div>
                    {% endfor %}
                </div>

                <div class="mt-6 flex items-center justify-between">
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md">
                        Enregistrer
                    </button>
                    <a href="{{ path('app_agency_index') }}" class="text-indigo-600 hover:text-indigo-500">
                        Retour à la liste
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}